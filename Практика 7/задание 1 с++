#include <iostream>
using namespace std;

void maxim_element(int*A, int size, int& max_el) {
    max_el = A[0];
    for (int i = 1; i < size; i++) {
        if (A[i] > max_el)
            max_el = A[i];

    }
}


void raznost(int* A, int size, int max_el) {
    for (int i = 0; i < size; i++) {
        A[i] -= max_el;
    }
}


int main() {

    int* A = new int[5]; // Динамическое выделение памяти для массива A
    int* B = new int[5]; // Динамическое выделение памяти для массива B

    // Ввод массивов
    cout << "Введите 5 элементов для массива A:" << endl;
    for (int i = 0; i < 5; i++) {
        cin >> A[i];
    }

    cout << "Введите 5 элементов для массива B:" << endl;
    for (int i = 0; i < 5; i++) {
        cin >> B[i];
    }

    cout << "Исходный массив A: ";
        for (int i = 0; i < 5; i++)
            cout << A[i] << " ";
        cout << endl;

    cout << "Исходный массив B: ";
        for (int i = 0; i < 5; i++)
            cout << B[i] << " ";
        cout << endl;

    int maxA, maxB;
    maxim_element(A ,5 , maxA);
    maxim_element(B ,5 , maxB);

    raznost(A, 5 , maxA);
    raznost(B, 5 , maxB);

    cout << "Преобразованный массив A: ";
        for (int i = 0; i < 5; i++)
            cout << A[i] << " ";
        cout << endl;

    cout << "Преобразованный массив B: ";
        for (int i = 0; i < 5; i++)
            cout << B[i] << " ";
        cout << endl;



    // Освобождение выделенной памяти
    delete[] A;
    delete[] B;

    return 0;
}
